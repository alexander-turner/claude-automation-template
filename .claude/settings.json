{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-setup.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash(git push*|gh pr *)",
        "hooks": [
          {
            "type": "command",
            "command": "echo '=== PRE-PR CHECKS ===' && pnpm lint 2>&1 && pnpm check 2>&1"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash(git push*|gh pr create*)",
        "hooks": [
          {
            "type": "command",
            "command": "echo '=== WAITING FOR CI ===' && gh pr checks --watch 2>&1"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/verify-ci-on-stop.sh",
            "timeout": 300
          }
        ]
      }
    ]
  }
}
